NODE_ENV=production
PRODUCTION_DOMAIN=www.yuthub.com
APP_URL=https://www.yuthub.com

# OAuth callback URLs will use PRODUCTION_DOMAIN
GOOGLE_CALLBACK_URL=https://www.yuthub.com/auth/google/callback
MICROSOFT_CALLBACK_URL=https://www.yuthub.com/auth/microsoft/callback
APPLE_CALLBACK_URL=https://www.yuthub.com/auth/apple/callback

# Session configuration
SESSION_DOMAIN=yuthub.com
COOKIE_SECURE=true
COOKIE_SAME_SITE=lax

# CORS configuration
CORS_ORIGINS=https://www.yuthub.com,https://yuthub.com,https://app.yuthub.com,https://admin.yuthub.com