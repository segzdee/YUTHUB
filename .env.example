# Supabase Configuration
VITE_SUPABASE_URL=your-supabase-project-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Demo Account (Optional - for testing)
VITE_DEMO_EMAIL=demo@example.com
VITE_DEMO_PASSWORD=SecurePassword123!

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/yuthub

# Server Configuration
PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your-jwt-secret-here-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=yuthub.com
JWT_AUDIENCE=yuthub-api
SESSION_SECRET=your-session-secret-here-change-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Microsoft OAuth (Optional)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# Stripe (Payment Processing)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Stripe Price IDs (run npm run setup:stripe to generate)
# Monthly Plans (£199, £499, £999)
STRIPE_PRICE_STARTER_MONTHLY=price_xxx
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_xxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxx
# Annual Plans (15% discount: £2,029.80, £5,100.60, £10,190.40)
STRIPE_PRICE_STARTER_ANNUAL=price_xxx
STRIPE_PRICE_PROFESSIONAL_ANNUAL=price_xxx
STRIPE_PRICE_ENTERPRISE_ANNUAL=price_xxx

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yuthub.com

# SSL Configuration (Production)
HTTPS_ENABLED=false
SSL_KEY_PATH=./ssl/server.key
SSL_CERT_PATH=./ssl/server.crt

# Redis (Optional - for session storage)
REDIS_URL=redis://localhost:6379

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-from-sentry-io
APP_VERSION=1.0.0
GOOGLE_ANALYTICS_ID=your-ga-id

# API Keys
MAPBOX_API_KEY=your-mapbox-api-key
CLOUDINARY_URL=your-cloudinary-url

# Frontend URLs
FRONTEND_URL=http://localhost:5173
PUBLIC_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Platform Admin
PLATFORM_ADMIN_EMAIL=admin@yuthub.com
PLATFORM_ADMIN_PASSWORD=change-this-password

# Feature Flags
ENABLE_2FA=true
ENABLE_SSO=false
ENABLE_WEBSOCKETS=true
ENABLE_BACKGROUND_JOBS=true