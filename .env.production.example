# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env.production and fill in your production values
# Use strong, randomly generated secrets for all sensitive fields

# Database Configuration (using Neon/PostgreSQL)
DATABASE_URL=postgresql://[user]:[password]@[host]/[database]?sslmode=require

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL
VITE_API_URL=https://api.yuthub.com
CLIENT_URL=https://yuthub.com

# Authentication Secrets (MUST BE STRONG AND UNIQUE)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_USE_STRONG_64_CHAR_RANDOM_STRING
SESSION_SECRET=CHANGE_ME_USE_STRONG_64_CHAR_RANDOM_STRING
ENCRYPTION_KEY=CHANGE_ME_USE_32_CHAR_RANDOM_STRING

# Google OAuth (Production)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=https://api.yuthub.com/auth/google/callback

# Microsoft Azure AD (Production)
MICROSOFT_CLIENT_ID=your-production-azure-client-id
MICROSOFT_CLIENT_SECRET=your-production-azure-client-secret
MICROSOFT_REDIRECT_URI=https://api.yuthub.com/auth/microsoft/callback

# SAML Configuration
SAML_ENTRY_POINT=https://your-idp.com/saml/sso
SAML_ISSUER=yuthub-production
SAML_CERT=your-saml-certificate

# LDAP Configuration
LDAP_URL=ldaps://your-ldap-server.com:636
LDAP_BIND_DN=cn=service-account,dc=example,dc=com
LDAP_BIND_CREDENTIALS=your-ldap-password
LDAP_SEARCH_BASE=dc=example,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@yuthub.com

# Stripe (Production Keys)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Replit Auth (if using Replit deployment)
REPLIT_DOMAINS=yuthub.com,www.yuthub.com,yuthub.replit.app
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc

# Security Settings
ENABLE_2FA=true
ENABLE_SSO=true
ENABLE_WEBSOCKETS=true
ENABLE_BACKGROUND_JOBS=true

# Production Security Headers
HTTPS_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/yuthub/uploads

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
NEW_RELIC_LICENSE_KEY=your-new-relic-key
ANALYTICS_ID=G-XXXXXXXXXX

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=yuthub-backups
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=eu-west-2

# Redis (for production caching and sessions)
REDIS_URL=redis://:[password]@[host]:6379

# Content Delivery Network
CDN_URL=https://cdn.yuthub.com

# Security Monitoring
SECURITY_ALERT_EMAIL=security@yuthub.com
AUDIT_LOG_RETENTION_DAYS=90
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30