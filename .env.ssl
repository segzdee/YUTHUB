# SSL Configuration for YUTHUB
HTTPS_ENABLED=true
SSL_CERT_PATH=./ssl/server.crt
SSL_KEY_PATH=./ssl/server.key
SSL_PORT=443

# Database SSL Configuration
DATABASE_SSL=false
DATABASE_URL_SSL=${DATABASE_URL}?sslmode=prefer

# Production SSL Settings (enabled for testing)
# For production deployment, also enable:
# DATABASE_SSL=true
# DATABASE_URL_SSL=${DATABASE_URL}?sslmode=require